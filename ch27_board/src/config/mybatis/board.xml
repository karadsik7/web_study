<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<select id="selectList" resultType="board" parameterType="map">
		select * from (select rownum as rnum, b.* from (select * from board order by id desc) b) 
			where rnum between #{start} and #{end}
	</select>
	
	<select id="selectOne" resultType="board" parameterType="int">
		select * from board where id = #{value}
	</select>
	
	<insert id="insert" parameterType="board">
		<!-- 
		ID      NOT NULL NUMBER        
		NAME    NOT NULL VARCHAR2(30)  
		TITLE   NOT NULL VARCHAR2(100) 
		CONTENT NOT NULL CLOB          
		IP      NOT NULL VARCHAR2(15)  
		REGDATE          DATE          
		HIT              NUMBER        
		REF              NUMBER        
		STEP             NUMBER        
		DEPTH            NUMBER -->
		insert into board values(seq_board_id.nextval, #{name}, #{title}, #{content}, #{ip}, sysdate, 0, seq_board_id.currval, 0, 0)
	</insert>
	
	<update id="plusHit" parameterType="int">
		update board set hit = hit + 1 where id = #{value}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from board where id = #{value}
	</delete>
	
	<update id="modify" parameterType="board">
		update board set name = #{name}, title = #{title}, content = #{content}, regdate = sysdate where id = #{id}
	</update>
	
	<select id="totalCount" resultType="int">
		select count(*) from board
	</select>
</mapper>